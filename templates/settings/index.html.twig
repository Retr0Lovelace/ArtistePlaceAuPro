<body>
<style>
    *{
        color: var(--white);
    }
    body{
        background-color: var(--bg-gray-color) !important;
    }

    header{
        display: flex;
        justify-content: space-between;
    }

    header > a > img{
        width: 100px;
        height: 100px;
        margin: 16px 31px;
    }
    header > img:nth-child(2){
        width: 130px;
        height: 130px;
        border: 2px solid black;
        border-radius: 50%;
        background-size: 100% !important;
        margin: 16px 31px;
    }
    main {
        display: flex;
        margin-top: 8px;
    }
    main > aside{
        margin: 0 31px;
        width: 17vw;
    }

    main > aside > div:nth-child(1) > img{
        width: 58px;
        height: 58px;
        border: 2px solid red;
        border-radius: 25%;
        background-size: 100% !important;
        box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);
    }
    main > aside > div:nth-child(1) > div{
        margin: 22px 0 42px 0;
    }
    main > aside > div:nth-child(1) > div > h6{
        font-size: 23px;
        color: #262626;
    }
    main > aside > div:nth-child(1) > div > p{
        font-size: 23px;
    }

    main > aside > div:nth-child(2){
        margin-bottom: 28px;
    }

    main > aside > div:nth-child(2) > a{
        display: flex;
        justify-content: center;
        height: 35px;
        width: 200px;
        border-radius: 8px;
        background: #b71c1c;
        box-shadow: 0px 3px 6px rgb(0 0 0 / 10%);
    }

    main > aside > div:nth-child(2) > a > svg,
    main > aside > div:nth-child(2) > a > h2{
        margin: auto;
    }

    main > aside > div:nth-child(3) > h2{
        margin-bottom: 20px;
    }

    main > aside > div:nth-child(3) > div > div:nth-child(1){
        margin-bottom: 12px;
    }

    main > aside > div:nth-child(3) > div > div:nth-child(1) > a,
    main > aside > div:nth-child(3) > div > div:nth-child(2) > a{
        display: flex;
        margin-left: 17px;
    }
    main > aside > div:nth-child(3) > div > div:nth-child(1) > a > svg,
    main > aside > div:nth-child(3) > div > div:nth-child(2) > a > svg{
        margin-right: 7px;
    }
    main > aside > div:nth-child(3) > div > div:nth-child(1) > a > svg,
    main > aside > div:nth-child(3) > div > div:nth-child(1) > a > h2,
    main > aside > div:nth-child(3) > div > div:nth-child(2) > a > svg,
    main > aside > div:nth-child(3) > div > div:nth-child(2) > a > h2{
        margin-top: auto;
        margin-bottom: auto;
    }
    main > aside > div:nth-child(3) > div > div:nth-child(1) > a > h2,
    main > aside > div:nth-child(3) > div > div:nth-child(2) > a > h2{
        font-size: 18px;
    }
    main > section{
        width: 100vw;
        position: relative;
    }
    main > section > h1{
        position: absolute;
        top: -80px;
        left: 80px;
        font-size: 55px;
    }
    main > section > div{
        width: 55vw;
        height: 77vh;
        border-radius: 14px;
        background: #f5f6f7;
        box-shadow: 0px 3px 6px rgb(0 0 0 / 10%);
        margin-left: 5%;
    }
    main > section > div > div:nth-child(1){
        background: white;
        border-top-left-radius: 14px;
        border-top-right-radius: 14px;
        height: 130px;
        display: flex;
    }
    main > section > div > div:nth-child(1) > div:nth-child(1){
        margin: 3% 0 auto 0;
    }
    main > section > div > div:nth-child(1) > div:nth-child(2){
        margin: 2.1% 0 auto 0;
    }
    main > section > div > div:nth-child(1) > div:nth-child(1) > svg{
        width: 100px;
    }
    main > section > div > div:nth-child(1) > div:nth-child(2) > h3{
        font-size: 27px;
        color: #262626;
        margin-bottom: 4px;
    }
    main > section > div > div:nth-child(1) > div:nth-child(2) > p{
        font-family: "Open Sans";
        font-weight: normal;
        font-size: 24px;
        line-height: 21px;
        text-align: left;
        color: #59626a;
        width: 96%;
    }

    label{
        font-family: "Open Sans";
        font-weight: 600;
        font-size: 23px;
        text-align: left;
        color: #262626;
        margin-bottom: 15px;
    }

    input,select{
        width: 400px;
        height: 60px;
        border-radius: 6px;
        box-shadow: 0px 3px 6px rgb(0 0 0 / 3%);
    }
    input::placeholder{
        padding-left: 15px;
    }

    hr{
        width: 99.72%;
        border: 0.05px solid #eaeef3;
    }

    main > section > div > div:nth-child(2) > form > div {
        display: flex;
        justify-content: space-evenly;
        margin-bottom: 40px;
    }

    main > section > div > div:nth-child(2) > form > div:nth-child(1){
        margin-top: 25px;
    }

    main > section > div > div:nth-child(2) > form > div:nth-child(1) > div:nth-child(1),
    main > section > div > div:nth-child(2) > form > div:nth-child(2) > div:nth-child(1),
    main > section > div > div:nth-child(2) > form > div:nth-child(4) > div:nth-child(1),
    main > section > div > div:nth-child(2) > form > div:nth-child(1) > div:nth-child(2),
    main > section > div > div:nth-child(2) > form > div:nth-child(4) > div:nth-child(2),
    main > section > div > div:nth-child(2) > form > div:nth-child(2) > div:nth-child(2){
        width: min-content;
    }

    main > section > div > div:nth-child(2) > form > hr{
        margin: 40px 0;
    }

    main > section > div > div:nth-child(2) > form > div:nth-child(4) > div:nth-child(1) > a{
        position: absolute;
        left: 85%;
        top: 3%;
        font-size: 17px;
        color: #168eea;
    }

    main > section > div > div:nth-child(2) > form > input[type=submit]{
        width: 140px;
        height: 55px;
        border-radius: 6px;
        background: #b71c1c;
        box-shadow: 0px 3px 6px rgb(0 0 0 / 2%);
        cursor: pointer;
        float: right;
        margin-right: 5%;
    }
    body > main > section > div > div:nth-child(2) > form > div > div > input{
        margin-top: 10px;
    }
</style>
